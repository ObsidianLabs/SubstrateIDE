{
  "name": "subatrate-ide",
  "description": "Graphic IDE for developing Substrate blockchains",
  "version": "0.1.1",
  "author": {
    "name": "Substrate IDE",
    "email": "phil.li@obsidians.io",
    "url": "https://obsidians.io"
  },
  "private": true,
  "homepage": "./",
  "main": "build/main/index.js",
  "engines": {
    "node": "12"
  },
  "scripts": {
    "install": "electron-rebuild",
    "dev:react": "react-app-rewired start",
    "build:react": "react-app-rewired build",
    "dev:main": "webpack --config webpack.main.config.js && electron ./dev/index.js",
    "build:main": "cross-env NODE_ENV=production webpack --config webpack.main.prod.config.js",
    "prepare:main": "electron-rebuild && electron-builder install-app-deps",
    "dev": "concurrently \"yarn dev:react\" \"wait-on http://localhost:3000 && yarn dev:main\"",
    "build": "yarn build:react && yarn build:main",
    "dist": "yarn build && electron-builder -c.extraMetadata.main=build/main/index.js",
    "lint": "tslint '{src,test,mocks}/**/*.{ts,tsx}' --project ./tsconfig.json",
    "test": "jest '(\\/test\\/(?!e2e/)).*'",
    "pretest:e2e": "yarn build",
    "test:e2e": "jest '(\\/test\\/e2e/).*'",
    "pack": "yarn build && electron-builder --dir",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@obsidians/code-editor": "^0.1.0",
    "@obsidians/file-ops": "^0.1.0",
    "@obsidians/filetree": "^0.1.0",
    "@obsidians/ipc": "^0.1.0",
    "@obsidians/navbar": "^0.1.0",
    "@obsidians/notification": "^0.1.0",
    "@obsidians/pty": "^0.9.0",
    "@obsidians/substrate-bottombar": "^0.1.0",
    "@obsidians/substrate-compiler": "^0.1.0",
    "@obsidians/substrate-header": "^0.1.0",
    "@obsidians/substrate-instances": "^0.1.0",
    "@obsidians/substrate-keypair": "^0.1.0",
    "@obsidians/substrate-node": "^0.1.0",
    "@obsidians/substrate-project": "^0.1.1",
    "@obsidians/substrate-welcome": "^0.1.1",
    "@obsidians/terminal": "^0.1.0",
    "@obsidians/workspace": "^0.1.1",
    "@polkadot/extension-dapp": "^0.24.1",
    "fs-extra": "^8.1.0",
    "node-pty": "^0.9.0",
    "strip-ansi": "^6.0.0",
    "trash": "^6.0.0"
  },
  "optionalDependencies": {
    "keytar": "^5.4.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/polyfill": "^7.6.0",
    "@babel/preset-typescript": "^7.6.0",
    "@fortawesome/fontawesome-pro": "^5.12.0",
    "@hot-loader/react-dom": "^16.9.0",
    "@polkadot/api": "^0.96.1",
    "@types/jest": "24.0.15",
    "@types/node": "12.6.3",
    "@types/react": "16.8.23",
    "@types/react-dom": "16.8.4",
    "babel-loader": "^8.0.6",
    "babel-plugin-import": "^1.12.0",
    "bootstrap": "^4.3.1",
    "concurrently": "^4.1.2",
    "copy-webpack-plugin": "^5.1.1",
    "cross-env": "^5.2.0",
    "customize-cra": "^0.7.0",
    "default-shell": "^1.0.1",
    "dotenv": "^8.0.0",
    "electron": "^8.2.3",
    "electron-builder": "^21.2.0",
    "electron-is-dev": "^1.1.0",
    "electron-rebuild": "^1.8.8",
    "electron-updater": "^4.1.2",
    "immutable": "^4.0.0-rc.12",
    "less": "^3.9.0",
    "less-loader": "^5.0.0",
    "lodash": "^4.17.14",
    "moment": "^2.24.0",
    "monaco-editor": "^0.20.0",
    "monaco-editor-webpack-plugin": "^1.9.0",
    "native-ext-loader": "^2.3.0",
    "node-fetch": "^2.6.0",
    "node-sass": "^4.12.0",
    "react": "^16.12.0",
    "react-app-rewired": "^2.1.3",
    "react-dom": "^16.12.0",
    "react-json-view": "^1.19.1",
    "react-redux": "^7.1.0",
    "react-router": "^5.0.1",
    "react-router-cache-route": "^1.4.6",
    "react-router-dom": "^5.0.1",
    "react-scripts": "3.3.0",
    "redux": "^4.0.4",
    "redux-config": "^0.1.1",
    "redux-logger": "^3.0.6",
    "redux-persist": "^5.10.0",
    "redux-persist-transform-immutable": "^5.0.0",
    "shell-path": "^2.1.0",
    "source-map-loader": "^0.2.4",
    "typescript": "3.7.2",
    "wait-on": "^3.3.0",
    "webpack-cli": "^3.3.9",
    "webpack-merge": "^4.2.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not ie <= 11",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "productName": "Substrate IDE",
    "artifactName": "SubstrateIDE-${version}.${ext}",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "publish": [
      {
        "provider": "generic",
        "url": "http://www.obsidians.io"
      }
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "appId": "com.obsidians.substrate-ide",
      "category": "developer-tools"
    },
    "dmg": {
      "contents": [
        {
          "x": 160,
          "y": 220
        },
        {
          "x": 380,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "icon": "./assets/icon.icns",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    },
    "extends": null
  }
}
